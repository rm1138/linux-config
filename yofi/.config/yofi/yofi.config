# This file should be placed at ~/.config/yofi/yofi.config

width = 600
height = 600
force_window = false
font = "Hack"
font_size = 24
bg_color = 0x2d2d2ddd # ~~colors are specified in 0xRRGGBBAA format
scale = 1

[input_text]
font_color = 0xffffffff
bg_color = 0x999999ff
margin = "15"
padding = "10 0"

[list_items]
font_color = 0xffffffff
selected_font_color = 0x6699ccff
match_color = 0xffcc66ff
margin = "0 15"
item_spacing = 10
icon_spacing = 15

# When section presents, icons are displayed
#[icon]
#size = 32 # no scaling is performed, so need to choose exact size
#theme = "Papirus"
## if no icon found for an app, this on will be used instead
#fallback_icon_path = "/usr/share/icons/Adwaita/16x16/categories/applications-engineering-symbolic.symbolic.png"
